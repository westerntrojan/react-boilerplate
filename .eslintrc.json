{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "plugin:jsx-a11y/recommended", "plugin:prettier/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "jsx-a11y", "prettier"],
	"rules": {
		"prettier/prettier": "error",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"linebreak-style": ["error", "windows"],
		"no-unused-vars": "warn"
	}
}
